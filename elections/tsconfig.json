{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/test/*": ["./test/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src", "./test"]
}
