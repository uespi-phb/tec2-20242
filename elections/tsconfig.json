{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@/test/*": ["./test/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "./src",
    "./test"
  ]
}
